<!DOCTYPE html>
<html>
  <head>
    <title>DBC Wikipedia Clone</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Oxygen" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'banner' %>

    <div class='container'>
      <%= render 'errors' %>
      <div class="side-bar">
        <%= render 'categories', categories: @side_bar_categories %>
      <div>
      <%= yield %>
    </div>
  </body>
</html>
